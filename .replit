modules = ["web", "python-3.12", "nodejs-20"]
run = "python startup.py"

[nix]
channel = "stable-24_05"
packages = ["chromedriver", "chromium", "geckodriver", "rapidfuzz-cpp", "taskflow", "xcodebuild", "zlib"]

[deployment]
run = ["sh", "-c", "python -m uvicorn api:app --host 0.0.0.0 --port 5000"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 43402999
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python startup.py"

[[ports]]
localPort = 5000
externalPort = 80
